<Window x:Class="Wpf_Chemeris_PR4._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Chemeris_PR4._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="426">
    <Grid>
        <Label Content="        Угадай число" Margin="16,92,0,0" FontSize="36" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Width="384"/>
